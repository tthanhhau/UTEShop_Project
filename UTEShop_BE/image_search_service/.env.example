# Image Search Service Configuration
# Copy this file to .env and update with your values

# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/uteshop?retryWrites=true&w=majority

# Service Configuration
IMAGE_SEARCH_PORT=5002

# Performance & Feature Toggles
# Enable color detection for better matching (slower but more accurate)
ENABLE_COLOR_DETECTION=false

# Enable multi-image encoding for products (slower but better representation)
ENABLE_MULTI_IMAGE_ENCODING=true

# Similarity threshold for filtering results (0.1-0.9, higher = more strict)
MIN_SIMILARITY_THRESHOLD=0.3

# Recommended Settings:
# For production: ENABLE_COLOR_DETECTION=false, ENABLE_MULTI_IMAGE_ENCODING=true
# For development: ENABLE_COLOR_DETECTION=true, ENABLE_MULTI_IMAGE_ENCODING=true
# For maximum speed: ENABLE_COLOR_DETECTION=false, ENABLE_MULTI_IMAGE_ENCODING=false